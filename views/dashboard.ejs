<%- include ('./partials/dashboardnav.ejs') %>
		<main class="pt-5 max-lg-5">
			
			<div class="row row-cols-1 row-cols-md-2 g-4">
				<%for(let i = 0; i < schema.length; i++) {%>

				<div class="col">
					<div class="card m-3">
						<!-- <img src="..." class="card-img-top" alt="..." /> -->
						<div class="card-body">
							<div class="form-floating mb-3">
								<input
									type="text"
									class="form-control"
									id="floatingInput"
									placeholder=" "
								/>
								<label for="floatingInput"><%=schema[i].url%></label>
							</div>
							<div class="form-floating mb-3">
								<input
									type="text"
									class="form-control"
									id="floatingInput"
									placeholder="<%=schema.username%> "
								/>
								<label for="floatingInput"><%=schema[i].username%></label>
							</div>
							<div class="form-floating">
								<input
									type="password"
									class="form-control"
									id="floatingPassword"
									placeholder="Password"
								/>
								<label for="floatingPassword"><%=schema[i].password%></label>
							</div>
							
							<a href="/dashboard/<%=schema[i].id%>/edit"><button type="button" class="btn btn-dark m-2">
								EDIT PASSWORD / USERNAME
							</button></a>
                            <form action="/dashboard/<%=schema[i].id%>?_method=DELETE" method="POST">
                                <label class="btn btn-dark m-2">
                                <input type="submit" value="DELETE" />
                            </label>
                            </form>
						</div>
					</div>
				</div>

				<%}%>
			</div>
		</main>
	</body>
</html>
